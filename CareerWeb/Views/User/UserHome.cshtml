@model List<Model.EF.OfferJob>
@using Model.Dao
@{
    ViewBag.Title = "UserHome";
    Layout = "~/Views/Shared/LayoutForUser.cshtml";
    var OfferJobDao = new OfferJobDao();
    var OfferJobSkillDao = new OfferJobSkillDao();
    var EnterpriseDao = new EnterpriseDao();
    var SalaryDao = new SalaryDao();
}
@section cssInsert{
    <link href="~/Assets/Client/Css/User/UserHome.css" rel="stylesheet" />

}
<div class="banner">

   
        <div class="title">
            Go further. Dream Bigger. Work better
        </div>
        <form>
            <input type="text" name="jobBrowser" class="jobBrowser" style="height: 3em; margin-left: 7%;"
                   placeholder="Job Title, positon, skill...">
        </form>
        <form>
            <input class="jobBrowser" minlength="2" style="height: 3em;" placeholder="All career" name="OfferMajor" list="OfferMajor" id="as" />
            <datalist id="OfferMajor" style="height:5.1em">
                @foreach (var item in ViewBag.ListJobMain)
                {
                    <option value="@item.JobName" data-id="@item.JobID" />
                }
            </datalist>
        </form>
        <form>
            <input list="ListArea" name="ListArea" class="jobBrowser" style="height: 3em;"
                   placeholder="All state" id="bs">
            <datalist id="ListArea">
                @foreach (var item in ViewBag.ListArea)
                {
                    <option value="@item.NameArea" data-id="@item.AreaId" />
                }

            </datalist>

        </form>
        <div>
            <input type="submit" id="submit" class="submit-box" value="Tìm kiếm" onclick="search()" />
        </div>
        <div class="criterialSelected">
            <form action="">
                <input list="Mức lương" name="selectExperience" class="select-box select-box1" placeholder="Mức lương" />
                <datalist id="Mức lương">
                    @foreach (var item in ViewBag.ListSalary)
                    {
                        <option name="selectExperience">
                            @item.Amount
                        </option>
                    }
                </datalist>
                <input list="Vị trí" name="selectPosition" class="select-box select-box2" placeholder="Trình độ nghề nghiệp" />
                <datalist id="Vị trí">
                    @foreach (var item in ViewBag.ListPositionEmployee)
                    {
                        <option name="selectPosition">
                            @item.NamePosition
                        </option>
                    }
                </datalist>
                <input list="Kinh nghiệm" name="selectExperience" class="select-box select-box3" placeholder="Kinh nghiệm" />
                <datalist id="Kinh nghiệm">
                    @foreach (var item in ViewBag.ListExperience)
                    {
                        <option name="selectPosition">
                            @item.Time
                        </option>
                    }
                </datalist>

                <input list="Trình độ" name="selectLevel" class="select-box select-box4" placeholder="Tiền thưởng" />
                <datalist id="Trình độ">

                    @foreach (var item in ViewBag.ListLevelLearning)
                    {
                        <option name="selectLevel">
                            @item.NameLevel
                        </option>
                    }
                </datalist>
                <button type="reset" class="select-box select-box5" onclick="reload();">Xóa điều kiện tìm</button>
            </form>
        </div>
        <div class="container">
            <div class="serif">
                MyCV là dịch vụ tuyển dụng
                <a class="link" href="https://MyCV.vn/tim-viec-lam.html"> tìm việc làm</a>,
                <a class="link" href="https://MyCV.vn/gioi-thieu-dang-tin-tuyen-dung.html"> đăng tin tuyển dụng</a>
                 và <a class="link" href="https://MyCV.vn/tim-ho-so.html"> tìm hồ sơ xin việc</a> theo khu vực, lĩnh vực, kỹ năng và nhiều điều kiện khác
            </div>
        </div>
    </form>
</div>
