@model List<Model.EF.OfferJob>
@using Model.Dao
@{
    ViewBag.Title = "UserHome";
    Layout = "~/Views/Shared/LayoutForUser.cshtml";
    var OfferJobDao = new OfferJobDao();
    var OfferJobSkillDao = new OfferJobSkillDao();
    var EnterpriseDao = new EnterpriseDao();
    var SalaryDao = new SalaryDao();
}
@section cssInsert{
    <link href="~/Assets/Client/Css/User/UserHome.css" rel="stylesheet" />

}
<div class="banner">

    


        <div class="title">
            Tìm việc làm - đăng tin tuyển dụng miễn phí
        </div>

        <form action="">

            <input id="key-word" type="text" name="OfferName" class="dropdown" style="font-size: 18px; margin-left:15%;"
                   placeholder="Tìm kiếm theo từ khóa">


            <div class="dropdown" style="margin-left:2%">

                <select class="dropdown-select" name="OfferMajor" id="linh-vuc">
                    <option hidden value="underfine">Tìm kiếm theo lĩnh vực</option>

                </select>

            </div>

            <div class="dropdown" style="margin-left:2%">

                <select class="dropdown-select" name="Area" id="dia-diem">
                    <option hidden value="underfine">Tìm kiếm theo địa điểm</option>
                    @foreach (var item in ViewBag.ListArea)
                    {
                        <option value="@item.AreaId">@item.NameArea</option>
                    }


                </select>

            </div>

            <select name="OfferSalary" id="salary" class="select-box select-box1">
                <option hidden value="0">Mức Lương</option>
                @foreach (var item in ViewBag.ListSalary)
                {
                    <option value="@item.ID">@item.Amount</option>


                }
            </select>
            <select name="PositionJobID" id="careerLever" class="select-box select-box2">
                <option hidden value="0">Trình độ</option>
                @foreach (var item in ViewBag.ListPositionEmployee)
                {
                    <option value="@item.ID">@item.NamePosition</option>




                }
            </select>

            <select name="PositionJobID" id="gender" class="select-box select-box3">
                <option hidden value="0">Giới tính</option>
                <option hidden-value="male"> male</option>

                <option hidden-value="female"> female </option>



                }

            </select>
            <select name="ExperienceRequest" id="experience" class="select-box select-box4">
                <option hidden value="0">Kinh nghiệm</option>
                @foreach (var item in ViewBag.ListExperience)
                {
                    <option value="@item.ID">
                        @item.Time
                    </option>


                }
            </select>

            <select name="LearningLevelRequest" id="education" class="select-box select-box4">
                <option hidden value="0">Trình độ</option>
                @foreach (var item in ViewBag.ListLevelLearning)
                {
                    <option value="@item.ID">
                        @item.NameLevel
                    </option>


                }
            </select>

            <input type="submit" id="submit" class="submit-box" value="Tìm kiếm" onclick="search()" />
            
            <button type="reset" style="color: black; font-family:Tahoma; font-size: 0.8em" class="select-box select-box6">Xóa điều kiện tìm</button>
        </form>

        </div>

        <div class="container">
            <h3 class="serif">
                MyCV là dịch vụ tuyển dụng
                <a class="link" href="https://MyCV.vn/tim-viec-lam.html">tìm việc làm</a>,
                <a class="link" href="https://MyCV.vn/gioi-thieu-dang-tin-tuyen-dung.html">đăng tin tuyển dụng</a>
                và <a class="link" href="https://MyCV.vn/tim-ho-so.html">tìm hồ sơ xin việc</a> theo khu vực, lĩnh vực, kỹ năng và nhiều điều kiện khác
            </h3>
        </div>
    </form>
</div>
