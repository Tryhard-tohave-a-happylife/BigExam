
@{
    ViewBag.Title = "SearchCandidate";
    Layout = "~/Views/Shared/LayoutForEnterprise.cshtml";
}

@section cssInsert{

    <link href="~/Assets/Client/Css/Employee/SearchCandidate.css" rel="stylesheet" />
}

<div id="wrap">
    <div id="row">
        <a id="viec-lam" class="rower" href="#">Việc làm</a>/<a id="nha-tuyen-dung" class="rower" href="#">Nhà tuyển dụng</a>
        /<span id="tim-ho-so" class="rower">Tìm hồ sơ ứng viên</span>
    </div>

    <div id="main">
        <div id="search">
            <form>
                <input type="text" id="key-word" class="former" placeholder="Tên ứng viên" onchange="checkName()" />
                <select id="linh-vuc" class="former" name="linhvuc">
                    <option hidden value="0">Lĩnh vực</option>
                    @foreach (var item in ViewBag.JobListMain)
                    {
                        <option value="@item.JobID">@item.JobName</option>
                    }
                </select>
                <select id="dia-diem" class="former" name="diadiem">
                    <option hidden value="0">Địa điểm làm việc</option>
                    @foreach (var item in ViewBag.AreaList)
                    {
                        <option value="@item.AreaId">@item.NameArea</option>
                    }
                </select>
                <div id="tim-ho-so" class="former">Tìm hồ sơ</div>
            </form>
        </div>

        <div id="xu-ly">
            <div id="tim-nang-cao" class="xu-ly-er">Tìm nâng cao</div>
            <div id="xoa-loc" class="xu-ly-er">Xóa lọc</div>
        </div>

        <div id="search-more">
            <div id="select-wrap">
                <select id="TTKN" name="timtheokinhnghiem" class="tt-er">
                    <option hidden>Tìm theo kinh nghiệm</option>
                    @foreach (var item in ViewBag.ListExperience)
                    {
                        <option value="@item.ID"> @item.Time</option>
                    }
                </select>


                <select id="TTML" name="timtheomucluong" class="tt-er">
                    <option hidden>Tìm theo mức lương</option>
                    @foreach (var item in ViewBag.ListSalary)
                    {
                        <option value="@item.ID">@item.Amount</option>
                    }
                </select>


                <select id="TTNN" name="timtheongoaingu" class="tt-er">
                    <option hidden>Tìm theo ngoại ngữ</option>
                    @foreach (var item in ViewBag.Language)
                    {
                        <option value="@item.ID">@item.LanguageName</option>
                    }
                </select>

                <select id="TTTDNN" name="timtheotrinhdongoaingu" class="tt-er">
                    <option hidden>Tìm theo trình độ ngoại ngữ</option>
                    @foreach (var item in ViewBag.ListLevelLearning)
                    {
                        <option value="@item.ID">@item.NameLevel</option>
                    }
                </select>
            </div>

            <div id="videoclip-wrap">
                <input type="checkbox" value="1" id="videoclip-check" name="videoclip" />
                <label for="videoclip-check"><span>Có video clip giới thiệu</span></label>
            </div>

            <div id="thsnc-wrap">
                <div id="tim-ho-so-nang-cao">Tìm hồ sơ nâng cao</div>
            </div>
        </div>

        <div id="hstlv" class="ho-so">
            <div id="title" class="title">
                <h1><span></span>Hồ sơ theo lĩnh vực</h1>
            </div>

            <div id="list" class="list">
                @foreach (var item in ViewBag.JobListMain)
                {
                    <a href="/SearchCandidateResult?JobID=@item.JobID">@item.JobName</a>
                }
            </div>
        </div>

        <div id="hstkn" class="ho-so">
            <div id="title" class="title">
                <h1><span></span>Hồ sơ theo kỹ năng</h1>
            </div>

            <div id="list" class="list">
                @foreach (var item in ViewBag.JobListSub)
                {
                    <a href="#">@item.JobName</a>
                }

            </div>
        </div>
    </div>
</div>

@section jsInsert{
    <script src="~/Assets/Client/Js/Employee/SearchCandidate.js"></script>
}